<!DOCTYPE html>
<html>
<head>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - OKSSAS</title>
    @*@Styles.Render("~/Content/css")*@
    <link href="~/Content/pricing_demo.css" rel="stylesheet" />
    <link href="~/Content/pricing_table_style.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link href="~/Content/jasny-bootstrap.css" rel="stylesheet" />
    <link href="~/Content/jasny-bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />

    @Scripts.Render("~/bundles/modernizr")
    @*<link href="~/Content/css/carousel.css" rel="stylesheet" />
        <link href="~/Content/css/starter-template.css" rel="stylesheet" />
        <link href="~/Content/css/bootstrap-tagsinput.css" rel="stylesheet" />
        <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />*@

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("OKSSAS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Plans and Pricing", "PlansAndPricing", "Home")</li>
                    <li>@Html.ActionLink("Team", "Team", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="max-height:initial;height:auto;">
        @RenderBody()
        <hr />
    </div>
    <div class="container" style="max-height:initial;height:auto;">
        <div class="row">
            <footer>
                <p>&copy; @DateTime.Now.Year - OKSSAS</p>
            </footer>
        </div>
    </div>


    @RenderSection("scripts", required: false)
    @*<script src="~/Scripts/jquery-1.11.0.min.js"></script>
        <script src="~/Content/js/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/holder.js"></script>
        <script src="~/Scripts/highcharts.js"></script>
        <script src="~/Scripts/exporting.js"></script>*@
</body>

</html>
