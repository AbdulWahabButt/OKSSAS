<script>

    function SavePic() {
        var imgSrc = $("#imgDiv > img").attr("src");
        $("#ProfilePic").val(imgSrc);
        return true;
    }

    $(function () {
        $('#BirthDate').datetimepicker({
            pickTime: false
        });
    });

</script>