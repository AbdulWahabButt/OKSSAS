<div class="container" style="margin-top: 60px;">

    <div class="row">
        <div class="col-sm-6 col-md-6">

            <div class="panel panel-default panel-message">
                <div class="panel-heading">
                    <h3 class="panel-title"> Contact</h3>
                </div>

                <div class="panel-body" style="margin-top:20px">
                    <form class="form-horizontal" method="post" action="/Home/Contact">
                        <fieldset>
                            <!-- Form Name -->
                            @*<legend>Please Fill The Form</legend>*@
                            <!-- Text input-->
                            @if (!Request.IsAuthenticated)
                            {
                                <div class="form-group">
                                    <label class="col-md-3 control-label" for="textinput">Full Name</label>
                                    <div class="col-md-9">
                                        <input id="FullName" name="FullName" type="text" placeholder="" class="form-control input-md" required="">
                                    </div>
                                </div>
                            }
                            
                            <!-- Text input-->
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="textinput">Subject</label>
                                <div class="col-md-9">
                                    <input id="Subject" name="Subject" type="text" placeholder="" class="form-control input-md" required="">

                                </div>
                            </div>

                            <!-- Select Basic -->
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="selectbasic">Topic</label>
                                <div class="col-md-9">
                                    <select id="Topic" name="Topic" class="form-control">
                                        <option value="Billing">Billing</option>
                                        <option value="Technical Support">Technical Support</option>
                                        <option value="Complaint">Complaint</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>
                            </div>

                            <!-- Textarea -->
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="textarea">Message</label>
                                <div class="col-md-9">
                                    <textarea class="form-control" id="Message" name="Message" style="width: 100%;height: 200px;"></textarea>
                                </div>
                            </div>
                            <!-- Button -->
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="singlebutton"></label>
                                <div class="col-md-3">
                                    <button id="singlebutton" name="singlebutton" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-6">
            <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d3399.320927901848!2d74.3098873!3d31.5702461!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39191ca7d960f837%3A0xc0bb6ddf0568a651!2sPunjab+University+College+of+Information+Technology+-+Allama+Iqbal+Campus!5e0!3m2!1sen!2s!4v1391638991470" width="600" height="450" frameborder="0" style="border:0"></iframe>
        </div>

    </div>
</div>
